pipeline {
  agent any

  tools {
    git    'Default'
    nodejs 'Node_18'
  }

  triggers {
    pollSCM('H/2 * * * *')
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        // go into the Task_1 folder where your package.json really lives
        dir('Task_1') {
          bat 'npm install'
        }
      }
    }

    stage('Unit & Integration Tests') {
      steps {
        dir('Task_1') {
          bat 'npm test'
        }
      }
    }

    // …the rest of your stages…
  }
}
